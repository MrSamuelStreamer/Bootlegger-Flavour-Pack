<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ScenarioDef ParentName="ScenarioBase">
		<defName>MSS_BootleggerScenario</defName>
		<label>Bootlegger City Block</label>
		<factionDef>PlayerFaction</factionDef>
		<description>Through extortion, bribing, and favours, you've managed to grab yourself a corner of the city to begin your illustrious business, but the other families aren't happy about you breaking away and becoming the new competition. Especially when Law Enforcement is getting bolder and taking less prisoners...</description>
		<scenario>
			<summary>Bootleggers secure their corner of the big city.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>VFES_PlayerSettlement</factionDef>
			</playerFaction>
			<parts>
			<li Class="ScenPart_PlanetLayer">
				<def>PlanetLayer</def>
				<layer>Orbit</layer>
				<settingsDef>Orbit</settingsDef>
				<hide>True</hide>
				<tag>Orbit</tag>
				<connections>
					<li>
						<tag>Surface</tag>
						<zoomMode>ZoomIn</zoomMode>
					</li>
				</connections>
			</li>
			<li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
				<def>ConfigPage_ConfigureStartingPawns</def>
				<pawnChoiceCount>3</pawnChoiceCount>
				<pawnCount>3</pawnCount>
			</li>
			<li Class="ScenPart_PlayerPawnsArriveMethod">
				<def>PlayerPawnsArriveMethod</def>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>Silver</thingDef>
				<count>800</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>MealSurvivalPack</thingDef>
				<count>50</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>MedicineIndustrial</thingDef>
				<count>30</count>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>RF_SMG</thingDef>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>Gun_Revolver</thingDef>
			</li>
			<li Class="ScenPart_StartingThing_Defined">
				<def>StartingThing_Defined</def>
				<thingDef>RF_CB</thingDef>
			</li>
			<li Class="ScenPart_ScatterThingsNearPlayerStart">
				<def>ScatterThingsNearPlayerStart</def>
				<thingDef>Steel</thingDef>
				<count>450</count>
				<allowRoofed>True</allowRoofed>
			</li>
			<li Class="ScenPart_ScatterThingsNearPlayerStart">
				<def>ScatterThingsNearPlayerStart</def>
				<thingDef>WoodLog</thingDef>
				<count>300</count>
				<allowRoofed>True</allowRoofed>
			</li>
			<li Class="ScenPart_ScatterThingsAnywhere">
				<def>ScatterThingsAnywhere</def>
				<thingDef>Steel</thingDef>
				<count>720</count>
				<allowRoofed>True</allowRoofed>
			</li>
			<li Class="ScenPart_ScatterThingsAnywhere">
				<def>ScatterThingsAnywhere</def>
				<thingDef>MealSurvivalPack</thingDef>
				<count>7</count>
				<allowRoofed>True</allowRoofed>
			</li>
			<li Class="ScenPart_GameStartDialog">
				<def>GameStartDialog</def>
				<text>Through extortion, bribing, and favours, you've managed to grab yourself a corner of the city to begin your illustrious business, but the other families aren't happy about you breaking away and becoming the new competition. Especially when Law Enforcement is getting bolder and taking less prisoners...</text>
				<textKey>GameStartDialog</textKey>
				<closeSound>GameStartSting</closeSound>
			</li>
			<li Class="Cities.ScenPart_StartCity">
				<def>StartCity</def>
			</li>
		</parts>
		</scenario>
	</ScenarioDef>
</Defs>