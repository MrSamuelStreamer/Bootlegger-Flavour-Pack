<?xml version="1.0" encoding="UTF-8" ?>
<Defs>
    <VEF.Factions.ContrabandDef>
        <defName>MSSBL_Alcohol</defName>
        <label>Alcohol</label>
        
        <!-- the faction finding things illegal -->
        <factions>
            <li>Empire</li>
        </factions>
        
        <!-- history events to register on gifted/sold -->
        <giftedHistoryEvent>MSSBL_GiftedAlcohol</giftedHistoryEvent>
        <soldHistoryEvent>MSSBL_SoldAlcohol</soldHistoryEvent>
        
        <!-- Optional, but at least one should be populated -->
        <chemicals> <!-- ChemicalDefs to make illegal -->
            <li>Alcohol</li>
        </chemicals>
        <!-- <things> 
            <li>Beer</li>
        </things>
        <thingCategories>
            <li>Drugs</li>
        </thingCategories> -->
        
        <!-- Fully optional -->
        
        <illegalFactions> <!-- a list of factions that it's illegal to sell/gift to. Selling/gifting to other factions is allowed -->
            <li>Empire</li>
            <li>SettlerCivil</li>
            <li>SettlerRough</li>
            <li>SettlerSavage</li>
            <li>PatreonCivil</li>
            <li>TribeCannibal</li>
            <li>OutlanderRough</li>
        </illegalFactions>
        
        <!-- The chance to get caught in a transaction -->
        <chanceToGetCaught>0.5</chanceToGetCaught>
        
        <!-- Multiplier on the impact. With a positive number and appropriate strings, this would allow for positive goodwill on with faction A when trading with B. -->
        <impactMultiplier>-1</impactMultiplier>
        
        <!-- the LetterDef of the letter to send when discovered -->
        <letterType>ThreatSmall</letterType>
        
        <!-- random range from which to pick for the days until the faction discovers the illegal trade -->
        <daysToImpact>1~2</daysToImpact>
        
        
        <!-- string definitions -->
        <giftWarningKey>MSSBL_Contraband_Booze_GiftWarning</giftWarningKey>
        <sellWarningKey>MSSBL_Contraband_Booze_SellWarning</sellWarningKey>
        <letterLabelKey>MSSBL_Contraband_Booze_LetterLabel</letterLabelKey>
        <letterDescGiftKey>MSSBL_Contraband_Booze_LetterDescGift</letterDescGiftKey>
        <letterDescSoldKey>MSSBL_Contraband_Booze_LetterDescSold</letterDescSoldKey>
        <relationInfoKey>MSSBL_Contraband_Booze_RelationInfo</relationInfoKey>
    </VEF.Factions.ContrabandDef>
    
    <HistoryEventDef>
        <defName>MSSBL_GiftedAlcohol</defName>
        <label>gifted alcohol</label>
    </HistoryEventDef>
    
    <HistoryEventDef>
        <defName>MSSBL_SoldAlcohol</defName>
        <label>sold alcohol</label>
    </HistoryEventDef>
</Defs>